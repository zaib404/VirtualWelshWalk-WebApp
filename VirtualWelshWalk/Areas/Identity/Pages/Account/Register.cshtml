@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid Reg min-vh-100">

    <div class="container vh-100">
        <div class="row min-vh-100 justify-content-center align-items-center">
            <div class="col-12">
                <div class="card shadow" style="background-color:#eaeaea;">
                    <div class="card-body">
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h4 class="text-center">@Localizer["Create a new account"]</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-person iconColor"></i>
                                        </span>
                                    </div>

                                    @*<label asp-for="Input.FirstName"></label>*@
                                    <input asp-for="Input.FirstName" class="form-control" placeholder="@Localizer["First Name"]:" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-person iconColor"></i>
                                        </span>
                                    </div>
                                    @*<label asp-for="Input.LastName"></label>*@
                                    <input asp-for="Input.LastName" class="form-control" placeholder="@Localizer["Last Name"]:" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-person iconColor"></i>
                                        </span>
                                    </div>
                                    @*<label asp-for="Input.UserName"></label>*@
                                    <input asp-for="Input.UserName" class="form-control" placeholder="@Localizer["Username"]:" />
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-envelope-closed iconColor"></i>
                                        </span>
                                    </div>
                                    @*<label asp-for="Input.Email"></label>*@
                                    <input asp-for="Input.Email" class="form-control" placeholder="@Localizer["Email"]:" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-lock-locked iconColor"></i>
                                        </span>
                                    </div>
                                    @*<label asp-for="Input.Password"></label>*@
                                    <input asp-for="Input.Password" class="form-control" placeholder="@Localizer["Password"]:" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="oi oi-lock-locked iconColor"></i>
                                        </span>
                                    </div>
                                    @*<label asp-for="Input.ConfirmPassword"></label>*@
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@Localizer["Confirm Password"]:" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn rounded-0 text-white shadow" style="background-color:#af3182; width:100%;">@Localizer["Register"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

