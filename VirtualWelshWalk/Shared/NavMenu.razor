<div class="navbar navbar-expand-sm navbar-dark bg-dark navBG">

    <a href="#" class="navbar-brand">
        <img src="/Assets/WebPage/logo_with_text.png" class="navLogo" />
    </a>

    <button class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>


    <AuthorizeView>
        <Authorized>
            <div class="@NavMenuCssClass navbar-collapse" @onclick="ToggleNavMenu">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span class="fa fa-home iconSize" aria-hidden="true">
                                <span class="iconText">@space @Localizer["Home"]</span>
                            </span>
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="Add Steps">
                            <span class="fa fa-plus iconSize" aria-hidden="true">
                                <span class="iconText">@space @Localizer["Add Steps"]</span>
                            </span>
                        </NavLink>
                    </li>
                </ul>

                <ul class="navbar-nav">

                    <li class="nav-item">
                        <NavLink class="nav-link" href="Identity/Account/Manage">
                            <span class="fa fa-user iconSize" aria-hidden="true">
                                <span class="iconText">@space @Localizer["Hello"], @context.User.Identity.Name!</span>
                            </span>
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <form method="post" action="Identity/Account/LogOut">
                            <NavLink class="nav-link" id="logout" onclick="document.forms[0].submit();" style="cursor: pointer">
                                <span class="fa fa-sign-out-alt iconSize" aria-hidden="true">
                                    <span class="iconText">@space @Localizer["Log Out"]</span>
                                </span>
                            </NavLink>
                        </form>
                    </li>
                </ul>

            </div>
        </Authorized>

        <NotAuthorized>
            <div class="@NavMenuCssClass navbar-collapse" @onclick="ToggleNavMenu">

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <NavLink class="nav-link" href="Identity/Account/Login">
                            <span class="fa fa-sign-in-alt iconSize" aria-hidden="true">
                                <span class="iconText">@space @Localizer["Log In"]</span>
                            </span>
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="Identity/Account/Register">
                            <span class="fa fa-user-plus iconSize" aria-hidden="true">
                                <span class="iconText">@space @Localizer["Register"]</span>
                            </span>
                        </NavLink>
                    </li>

                </ul>

            </div>
        </NotAuthorized>
    </AuthorizeView>

</div>

@code {
    private string space = " ";
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
